<h2>Register</h2>
	<fieldset>
		
		<legend>Fill your details</legend> 
		<% form_for :user do |t| %>
		  <div class="form_row">
		  <%= t.label :first_name %>:
		  <%= t.text_field :first_name%>
		 </div>
		  
		 <div class="form_row">
		  <%= t.label :last_name %>:
		  <%= t.text_field :last_name %>
		 </div> 
		 
		 <div class="form_row">
		  <%= t.label :sexe %>:
		  <%= t.radio_button :sexe, "M" %> Male
		  <%= t.radio_button :sexe, "F" %> Female
		 </div>
		 
		 <div class="form_row">
		  <%= t.label :email %>:
		  <%= t.text_field :email %>
		 </div>
		 
		<div class="form_row">  
		  <%= t.label :password %>:
		  <%= t.password_field :password %>
		</div>
		
		 <div class="form_row">  
		  <%= t.label :date_of_birth %>:
		  <%= t.date_select :date_of_birth , :start_year => 1900 %>
		 </div>
		 
		 <div class="form_row">  
		  <%= t.label :country_of_origin %>:
		  <%= t.text_field :country_of_origin %>
		 </div> 
		 
		 <div class="submit">
		  <%= submit_tag "Register", :class => "submit"%>
		 </div>
		  
	</fieldset>
		<% end %>
	

